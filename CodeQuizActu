<script>

//variables de nombre de questions répondues et répondues justes, ne pas toucher!
var compteurR = 0;
var compteurRJ = 0;
var nombreQ = document.querySelectorAll(".titreQ").length;
//fin questions répondues

/* Base de données des réponses.
Dans l'ordre, il y a:
question: x, ----> numéro de la question, à partir de 0
txtreponse: "Explications", ------> texte à afficher (si réponse juste)
nombreClick: 0, ---------> un nombre de clics, pour bloquer plusieurs tentatives de réponse (ne pas toucher).
*/

var dataBaseQuiz =
[
//  Bloc pour le texte des questions. Copier-coller ici depuis excel

{question:0, txtreponse: "", nombreClick: 0, },
{question:1, txtreponse: "", nombreClick: 0, },
{question:2, txtreponse: "", nombreClick: 0, },
{question:3, txtreponse: "", nombreClick: 0, },
{question:4, txtreponse: "", nombreClick: 0, },
{question:5, txtreponse: "", nombreClick: 0, },
{question:6, txtreponse: "", nombreClick: 0, },
{question:7, txtreponse: "", nombreClick: 0, },
{question:8, txtreponse: "", nombreClick: 0, },
{question:9, txtreponse: "", nombreClick: 0, },
{question:10, txtreponse: "", nombreClick: 0, },

// fermeture de l'objet texte
];
//




//script question - réponses
//fonction de validation de la réponse correcte ou fausse. Test si b est égal à 0.
// Si la réponse est juste: indique le texte d'explication; modifie le style de bouton de réponse (en vert), incrémente les compteurs de réponses et de réponses justes de 1 et incréemnte nombreClick de la question de 1.
// Si la réponse est fausse: indique le texte d'explication; modifie le style de bouton de réponse (en rouge) et de la bonne réponse en vert, incrémente le compteur de réponses et incréemnte nombreClick de la question de 1.

function choixR(a, b, c)
{
    if (dataBaseQuiz[a].nombreClick === 0)
          {
          if (b === 0)
            {
            document.querySelectorAll(".blocR")[a].innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "<b>C'est juste!</b> " + dataBaseQuiz[a].txtreponse + "<div class='bufferTransitionRQ height='20em'></div>";
            compteurRJ++;
            compteurR++;
            var repJvert =  document.getElementById("choixR" + a + "0");
            repJvert.style.background = '#007500';
            repJvert.style.color = 'white';
            dataBaseQuiz[a].nombreClick++;
            }
          else
            {
            document.querySelectorAll(".blocR")[a].innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "<b>Mauvaise réponse...</b> " + dataBaseQuiz[a].txtreponse + "<div class='bufferTransitionRQ'></div>";
            var repFrouge =  document.getElementById("choixR"+ a + "1" + c);
            repFrouge.style.background = '#FFD9D9';
            repFrouge.style.color = '#CD3632';
            var repJvert =  document.getElementById("choixR" + a + "0");
            repJvert.style.background = '#007500';
            repJvert.style.color = 'white';
            compteurR++;
            dataBaseQuiz[a].nombreClick++;
            }
          }
    else {;}
    dataBaseQuiz[a].nombreClick++;
}



//script résultats des courses

function appelBlocBilan()
{
  if ((compteurR === nombreQ))
      {
            if (compteurRJ === nombreQ)
              {document.getElementById("blocBilanA").innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "Ton résultat: " + compteurRJ + " réponses correctes sur " + compteurR + ". Wahou, bravo! L'incarnation de la perfection!" + "<div class='bufferTransitionRQ'></div>";}
            else if (compteurRJ === (nombreQ - 1))
              {document.getElementById("blocBilanA").innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "Ton résultat: " + compteurRJ + " réponses correctes sur " + compteurR + ". C'est presque tout juste!" + "<div class='bufferTransitionRQ'></div>";}
              else if (compteurRJ >= 5)
                {document.getElementById("blocBilanA").innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "Ton résultat: " + compteurRJ + " réponses correctes sur " + compteurR + ". Pas mal!" + "<div class='bufferTransitionRQ'></div>";}
                else if (compteurRJ < 5)
                  {document.getElementById("blocBilanA").innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "Ton résultat: " + compteurRJ + " réponses correctes sur " + compteurR + ". Cela reste un bon score, parce qu'il y avait beaucoup de questions difficiles." + "<div class='bufferTransitionRQ'></div>";}
            else if (compteurRJ === 1)
              {document.getElementById("blocBilanA").innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "Ton résultat: " + compteurRJ + " réponse correcte sur " + compteurR + ". Une réponse correcte, c'est déjà quelque chose..." + "<div class='bufferTransitionRQ'></div>";}
            if (compteurRJ === 0)
              {document.getElementById("blocBilanA").innerHTML = "<div class='bufferTransitionRQ height='20em'></div>" + "Ton résultat: " + compteurRJ + " réponse correcte sur " + compteurR + ". Oulala, heureusement que ce quiz n'est pas noté." + "<div class='bufferTransitionRQ'></div>";}
      }
  else
      {
            document.getElementById("blocBilanA").innerHTML = "Il faut répondre à toutes les questions pour connaître le score." + "<div class='bufferTransitionRQ'></div>";
      }
}
//fin résultats des courses


</script>
